{
  "_id": "consent-user-global",
  "type": "pipe",
  "source": {
    "type": "dataset",
    "dataset": "userprofile"
  },
  "transform": {
    "type": "dtl",
    "rules": {
      "default": [
        ["copy", "*"],
        ["comment", "First rule inside 'hops->where': to connect users, second rule to only connect those who have agreed"],
        ["add", "consents",
          ["hops", {
            "datasets": ["consent c"],
            "where": [
              ["and",
                ["eq", "_S.Username", "c.Username"],
                ["eq", "c.HasConsented", true]
              ]
            ]
          }]
        ],
        ["if",
          ["is-empty", "_T.consents"],
          ["filter"]
        ]
      ]
    }
  },
  "pump": {
    "cron_expression": "0 0 1 1 ?"
  },
  "metadata": {
    "tags": ["consent"]
  }
}
