{
  "_id": "global-person",
  "type": "pipe",
  "source": {
    "type": "merge",
    "datasets": ["crm-person cp", "azure-person ap", "firebase-person fp"],
    "equality": [
      ["eq", "cp.EmailAddress", "ap.EmailAddress"],
      ["eq", "cp.EmailAddress", "fp.EmailAddress"]
    ]
  },
  "transform": {
    "type": "dtl",
    "rules": {
      "default": [
        ["copy", "*"]
      ]
    }
  }
}
